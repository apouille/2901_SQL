
#/ Crée la table USERS 
CREATE TABLE `users` (
`id` INTEGER PRIMARY KEY AUTOINCREMENT, `name` TEXT
);


#/ Crée la table article
CREATE TABLE `articles` (
`id` INTEGER PRIMARY KEY AUTOINCREMENT, `name` TEXT,
`id_users` TEXT,
`id_categories` TEXT
);


#/ Crée la table catégories
CREATE TABLE `categories` (
`id` INTEGER PRIMARY KEY AUTOINCREMENT, `name` TEXT,
`titre` TEXT,
`id_tag` TEXT
);

#/ Crée la table tag
CREATE TABLE `tag` (
`id` INTEGER PRIMARY KEY AUTOINCREMENT, `name` TEXT,
`titre` TEXT,
`couleur` TEXT
);


#/ Crée la table articles-catégories
CREATE TABLE `articles_categories` (
`id_articles, TEXT,
`id_categories` TEXT
);


#/ Crée la table catégories-tag
CREATE TABLE `categories_tag` (
`id_categories` TEXT,
`id_tag` TEXT
);


#/ Crée un premier utilisateur
INSERT INTO users (name) VALUES ('apouille');
SELECT * FROM users;

#/ Crée un premier article
INSERT INTO users (name,titre,i) VALUES ('apouille');
SELECT * FROM users;